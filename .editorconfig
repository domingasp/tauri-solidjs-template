root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.rs]
indent_size = 4
max_line_length = 100

[*.{md,mdx}]
# Markdown uses multiple lines for line breaks
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.xml]
indent_size = 4
