{
  "editor.rulers": [80],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.oxc": "explicit"
  },
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "oxc.typeAware": true,
  "oxc.fmt.configPath": ".oxfmtrc.json",
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml",
    "editor.tabSize": 4
  },
  "tailwindCSS.classFunctions": ["cn", "tv"],
  "tailwindCSS.experimental.classRegex": [["(`.*?`)", "(\".*?\")", "('.*?')"]],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "rust-analyzer.check.command": "clippy",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.rulers": [100]
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.rs$",
        "cmd": "cargo clippy --manifest-path src-tauri/Cargo.toml --fix --allow-dirty --allow-staged"
      },
      // If performance starts to degrade, consider disabling and running
      // knip manually (currently ~20-30ms)
      {
        "match": "\\.(ts|tsx|js|jsx|mjs|cjs|mts|cts)$",
        "cmd": "pnpm knip"
      }
    ]
  },
  "json.schemaDownload.trustedDomains": {
    "https://schemastore.azurewebsites.net/": true,
    "https://raw.githubusercontent.com/": true,
    "https://www.schemastore.org/": true,
    "https://json.schemastore.org/": true,
    "https://json-schema.org/": true,
    "https://schema.tauri.app/config/2": true,
    "https://unpkg.com/knip@5/schema.json": true
  },
  "cSpell.words": [
    "appkit",
    "clippy",
    "commitlint",
    "desaturate",
    "lintignore",
    "objc",
    "oxfmt",
    "oxlint",
    "serde",
    "solidjs",
    "squircle",
    "stylesheet",
    "tauri"
  ]
}
